{
    "files.exclude": {
        ".venv/": true,
        "**/__pycache__/": true,
    },
    "python.pythonPath": ".venv/bin/python",
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "python.linting.pylintEnabled": true,
}